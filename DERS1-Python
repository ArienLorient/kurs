kredi7 = "Gayrimenkul Arsa"

krediler = ["Hızlı Kredi","Maaşını Halkbanktan Alan","Mutlu emekli","Kamu Çalışanı","Gayrimenkul İşyeri","Gayrimenkul Özel","Gayrimenkul Arsa"]
